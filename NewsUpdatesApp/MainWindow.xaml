<Window x:Class="WorldNewsDM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WorldNewsDM"
        xmlns:views = "clr-namespace:WorldNewsDM.Views"
        mc:Ignorable="d"
        Title="World News" Height="700" Width="800" Background="LightCyan" BorderBrush="LightBlue" BorderThickness="10">
    <Grid >
        <StackPanel Orientation="Horizontal">
            <views:CountryView x:Name = "CountryViewControl" Loaded="CountryViewControlFunc" Width="278" Margin="10"/>
            <views:NewsView x:Name = "NewsViewControl" Loaded="NewsViewControlFunc" />
        </StackPanel>
   
    </Grid>
</Window>
